.row(ng-controller='AccountController')
  include ../../index/sections/alerts
  .col-md-6
    h2 Account 
    form.form-horizontal.ng-cloak(name="accountForm")
    fieldset
      .form-group
        label.col-md-2.control-label Name
        .col-md-10
          input.form-control(required='required', autofocus='',
            type='text', ng-model='account.name')    
      .form-group
        label.col-md-2.control-label Email
        .col-md-10
          input.form-control(ng-model='account.email', disabled='')
      .form-group
        label.col-md-2.control-label Status
        .col-md-10
          select.form-control(ng-model='account.status', disabled='')
            option(value='0') Registered
            option(value='1') Enabled
            option(value='2') Disabled
      .form-group
        .col-md-10.col-md-offset-2
          a.form-control.btn.btn-primary(ng-click='saveAccount()',
            ng-disabled='!account.name') Update
  .col-md-6
    h2 Password
    fieldset
      .form-group
        label.col-md-3.control-label Current
        .col-md-9
          input.form-control(required='required',
            type='password', ng-model='password')
      .form-group
        label.col-md-3.control-label New
        .col-md-9
          input.form-control(required='required',
            type='password', ng-model='newPwd')
      .form-group
        label.col-md-3.control-label Repeat
        .col-md-9
          input.form-control(required='required',
            type='password', ng-model='again')
      .form-group
        .col-md-9.col-md-offset-3
          a.form-control.btn.btn-primary(ng-click='changePwd()', 
            ng-disabled='isNotValid()') Change
 
